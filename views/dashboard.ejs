<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css"
      integrity="sha256-46r060N2LrChLLb5zowXQ72/iKKNiw/lAmygmHExk/o="
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <title>Document</title>
  </head>
  <body>
    <%- include("partials/_add_btn") %>
    <div class="container">
      <%-include("partials/_header")%>
      <h6>Dashboard</h6>
      <h3>Welcome <%= name %></h3>
      <p>Here are your stories</p>
      <% if(stories){%>
      <table class="striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th>Title</th>
          </tr>
        </thead>
        <tbody>
          <% for(let story of stories){ %>
          <tr>
            <td>
              <a href="/stories/<%= story._id %> "><%= story.title %> </a>
            </td>
            <td><%= story.createdAt %></td>
            <td><span class="dash-status"><%= story.status %> </span></td>
            <td></td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <% }else{ %>
      <p>You have not created any stories</p>
      <% } %>
    </div>
  </body>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor/4.14.1/ckeditor.js"
    integrity="sha256-bEIQpI72w9NJuIVhTLFUF2/8uxl0u5800r8ddViuv+o="
    crossorigin="anonymous"
  ></script>

  <script>
    M.Sidenav.init(document.querySelector(".sidenav"));
  </script>
</html>
